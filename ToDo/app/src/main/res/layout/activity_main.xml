<!--        app:icon="@drawable/add_button"-->
<!--        app:iconPadding="@dimen/icon_padding"-->
<!--        app:iconSize="@dimen/icon_size"-->
<!--        app:iconTint="#00ff00"-->
<!--        app:layout_constraintBottom_toBottomOf="parent"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintStart_toEndOf="@+id/taskInputLayout"-->
<!--        app:layout_constraintTop_toTopOf="@+id/taskInputLayout" />-->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/taskInputLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>